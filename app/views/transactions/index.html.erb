<h1>Your Transactions</h1>
<hr>

<table class="table table-hover table-striped table-bordered">
  <thead>
    <tr>
      <th width="7%">Time</th>
      <th width="14%">From</th>
      <th width="14%">To</th>
      <th>Description</th>
      <th width="10%">Coins</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.order('id DESC').each do |transaction| %>
      <tr>
        <td><%= transaction.created_at.in_time_zone('Kolkata').strftime('%H:%M') %></td>
        <td>
          <% if transaction.debitor.nil? %>
            CodeMart Subsystem
          <% else %>
            <%= transaction.debitor.username %>
          <% end %>
        </td>
        <td>
          <% if transaction.credited.nil? %>
            System
          <% else %>
            <%= transaction.credited.username %>
          <% end %>
        </td>
        <td><%= transaction.description %></td>
        <td><%= transaction.amount %> coins</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

