<%= form_for(@run) do |f| %>
  <% if @run.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @run.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :code %>
    <%= f.text_area :code, class: "form-control", style: "height: 200px;" %>
  </div>

  <div class="form-group">
    <%= f.label :output %>
    <%= f.text_area :output, class: "form-control", style: "height: 200px;" %>
  </div>

  <div class="actions">
    <%= f.hidden_field :program_id %>
    <%= f.submit nil, class: 'btn btn-success' %>
  </div>
<% end %>
