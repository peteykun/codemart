<h1>Login</h1>

<%= form_tag sessions_path do |f| %>

  <% if !@error.nil? %>
    <div class="alert alert-danger">
      <%= @error %>
    </div>
  <% end %>

  <div class="form-group">
    <%= label_tag :username %>
    <%= text_field_tag :username, nil, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: "form-control" %>
  </div>

  <div class="actions">
  	<%= submit_tag "Login" %>
  </div>

<% end %>
